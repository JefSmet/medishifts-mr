{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Vite App",
        "type": "pwa-chrome",
        "request": "launch",
        "url": "http://localhost:4000",
        "webRoot": "${workspaceFolder}/src",
        "breakOnLoad": true,
        "sourceMaps": true,
        "skipFiles": ["<node_internals>/**"],
        "runtimeArgs": ["--remote-debugging-port=9222"],
        "preLaunchTask": "vite"
      }
    ]
  }
  